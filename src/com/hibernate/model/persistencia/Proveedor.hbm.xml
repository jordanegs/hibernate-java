<hibernate-mapping>
    <class name="com.hibernate.model.persistencia.Presentacion" table="presentacion" catalog="hibernate_mvc" optimistic-lock="version">
        <id name="id_presentacion" type="java.lang.Integer">
            <column name="id_presentacion" />
            <generator class="identity" />
        </id>
        <property name="descripcion" type="string">
            <column name="descripcion" length="100" not-null="true" />
        </property>
    </class>
</hibernate-mapping>
